# Plinth Configuration Example
# Copy this file to .env and adjust values for your environment

# Gateway Configuration
HTTP_PORT=9000
ENVIRONMENT=development  # development, staging, production

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=plinth
DB_USER=plinth
DB_PASSWORD=plinth_dev_password

# Data Node Configuration
DATA_NODES=localhost:50051,localhost:50052,localhost:50053

# Replication Configuration
REPLICATION_FACTOR=3
WRITE_QUORUM=2
READ_QUORUM=2

# Repair Worker Configuration
REPAIR_INTERVAL=60s
SCRUB_INTERVAL=300s

# Storage Tiering
ENABLE_TIERING=false
HOT_TIER_DAYS=7
WARM_TIER_DAYS=30
COLD_TIER_DAYS=90

# Cost Tracking
STORAGE_COST_PER_GB=0.023  # dollars per GB per month
EGRESS_COST_PER_GB=0.09    # dollars per GB

# Observability
ENABLE_METRICS=true
METRICS_PORT=9090
LOG_LEVEL=info  # debug, info, warn, error

# Authentication (optional)
ENABLE_AUTH=false
# AWS_ACCESS_KEY_ID=minioadmin
# AWS_SECRET_ACCESS_KEY=minioadmin

# Performance Tuning
MAX_CONNECTIONS=100
READ_TIMEOUT=30s
WRITE_TIMEOUT=30s
MAX_HEADER_BYTES=1048576  # 1MB

